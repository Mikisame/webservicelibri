        <TextBox HorizontalAlignment="Left" Height="22" Margin="21,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <Button x:Name="btnAcquist" Content="elenco libri acquistati e numero copie" HorizontalAlignment="Left" Margin="21,339,0,0" VerticalAlignment="Top" Width="312" Click="btnAcquist_Click"/>
        <Label Content="Nome Utente corrispondente:" HorizontalAlignment="Left" Margin="139,275,0,0" VerticalAlignment="Top" Width="194"/>
